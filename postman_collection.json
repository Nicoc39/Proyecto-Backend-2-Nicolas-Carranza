{
  "info": {
    "name": "Backend 2 - API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    { "key": "baseUrl", "value": "http://localhost:8080" },
    { "key": "userToken", "value": "" },
    { "key": "adminToken", "value": "" },
    { "key": "resetToken", "value": "" },
    { "key": "productId", "value": "" },
    { "key": "ticketId", "value": "" },
    { "key": "ticketCode", "value": "" }
  ],
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Register",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "url": "{{baseUrl}}/api/sessions/register",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"first_name\": \"Nico\",\n  \"last_name\": \"Carranza\",\n  \"email\": \"user@example.com\",\n  \"age\": 25,\n  \"password\": \"password123\"\n}"
            }
          }
        },
        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "  const data = pm.response.json();",
                  "  if (data.token) {",
                  "    pm.environment.set('userToken', data.token);",
                  "  }",
                  "}"]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "url": "{{baseUrl}}/api/sessions/login",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"user@example.com\",\n  \"password\": \"password123\"\n}"
            }
          }
        },
        {
          "name": "Current",
          "request": {
            "method": "GET",
            "header": [{ "key": "Authorization", "value": "Bearer {{userToken}}" }],
            "url": "{{baseUrl}}/api/sessions/current"
          }
        },
        {
          "name": "Logout",
          "request": {
            "method": "POST",
            "url": "{{baseUrl}}/api/sessions/logout"
          }
        }
      ]
    },
    {
      "name": "Password Reset",
      "item": [
        {
          "name": "Request Reset",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "url": "{{baseUrl}}/api/sessions/request-password-reset",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"user@example.com\"\n}"
            }
          }
        },
        {
          "name": "Reset Password",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "url": "{{baseUrl}}/api/sessions/reset-password",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"token\": \"{{resetToken}}\",\n  \"newPassword\": \"newPassword123\",\n  \"confirmPassword\": \"newPassword123\"\n}"
            }
          }
        }
      ]
    },
    {
      "name": "Products",
      "item": [
        {
          "name": "List Products",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/api/products"
          }
        },
        {
          "name": "Get Product By ID",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/api/products/{{productId}}"
          }
        },
        {
          "name": "Create Product (Admin)",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Authorization", "value": "Bearer {{adminToken}}" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "url": "{{baseUrl}}/api/products",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Producto Demo\",\n  \"author\": \"Autor Demo\",\n  \"description\": \"Descripcion corta\",\n  \"price\": 19990,\n  \"stock\": 10,\n  \"category\": \"Categoria\",\n  \"thumbnail\": \"https://example.com/imagen.jpg\"\n}"
            }
          }
        },
        {
          "name": "Update Product (Admin)",
          "request": {
            "method": "PUT",
            "header": [
              { "key": "Authorization", "value": "Bearer {{adminToken}}" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "url": "{{baseUrl}}/api/products/{{productId}}",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Producto Demo Editado\",\n  \"description\": \"Descripcion actualizada\",\n  \"price\": 24990,\n  \"stock\": 15,\n  \"category\": \"Categoria\",\n  \"thumbnail\": \"https://example.com/imagen.jpg\"\n}"
            }
          }
        },
        {
          "name": "Delete Product (Admin)",
          "request": {
            "method": "DELETE",
            "header": [{ "key": "Authorization", "value": "Bearer {{adminToken}}" }],
            "url": "{{baseUrl}}/api/products/{{productId}}"
          }
        }
      ]
    },
    {
      "name": "Cart",
      "item": [
        {
          "name": "Get Cart",
          "request": {
            "method": "GET",
            "header": [{ "key": "Authorization", "value": "Bearer {{userToken}}" }],
            "url": "{{baseUrl}}/api/carts/"
          }
        },
        {
          "name": "Add To Cart",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Authorization", "value": "Bearer {{userToken}}" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "url": "{{baseUrl}}/api/carts/add",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"productId\": \"{{productId}}\",\n  \"quantity\": 1\n}"
            }
          }
        },
        {
          "name": "Update Quantity",
          "request": {
            "method": "PUT",
            "header": [
              { "key": "Authorization", "value": "Bearer {{userToken}}" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "url": "{{baseUrl}}/api/carts/update/{{productId}}",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"quantity\": 2\n}"
            }
          }
        },
        {
          "name": "Remove From Cart",
          "request": {
            "method": "DELETE",
            "header": [{ "key": "Authorization", "value": "Bearer {{userToken}}" }],
            "url": "{{baseUrl}}/api/carts/remove/{{productId}}"
          }
        },
        {
          "name": "Clear Cart",
          "request": {
            "method": "DELETE",
            "header": [{ "key": "Authorization", "value": "Bearer {{userToken}}" }],
            "url": "{{baseUrl}}/api/carts/clear"
          }
        }
      ]
    },
    {
      "name": "Purchases",
      "item": [
        {
          "name": "Process Purchase",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Authorization", "value": "Bearer {{userToken}}" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "url": "{{baseUrl}}/api/purchases/process",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"items\": [\n    {\n      \"product_id\": \"{{productId}}\",\n      \"quantity\": 1\n    }\n  ]\n}"
            }
          }
        },
        {
          "name": "My Tickets",
          "request": {
            "method": "GET",
            "header": [{ "key": "Authorization", "value": "Bearer {{userToken}}" }],
            "url": "{{baseUrl}}/api/purchases/my-tickets?limit=10"
          }
        },
        {
          "name": "Get Ticket By ID",
          "request": {
            "method": "GET",
            "header": [{ "key": "Authorization", "value": "Bearer {{userToken}}" }],
            "url": "{{baseUrl}}/api/purchases/ticket/{{ticketId}}"
          }
        },
        {
          "name": "Get Ticket By Code",
          "request": {
            "method": "GET",
            "header": [{ "key": "Authorization", "value": "Bearer {{userToken}}" }],
            "url": "{{baseUrl}}/api/purchases/ticket/code/{{ticketCode}}"
          }
        },
        {
          "name": "All Tickets (Admin)",
          "request": {
            "method": "GET",
            "header": [{ "key": "Authorization", "value": "Bearer {{adminToken}}" }],
            "url": "{{baseUrl}}/api/purchases/admin/all-tickets?limit=10"
          }
        },
        {
          "name": "Sales Statistics (Admin)",
          "request": {
            "method": "GET",
            "header": [{ "key": "Authorization", "value": "Bearer {{adminToken}}" }],
            "url": "{{baseUrl}}/api/purchases/admin/statistics"
          }
        }
      ]
    }
  ]
}
