  <div class="products-header">
    <div>
      <h1>üë§ Mi Perfil</h1>
      <p>Informaci√≥n de tu cuenta</p>
    </div>
    <div class="header-actions">
      <button id="logoutBtn" class="btn-danger">Cerrar Sesi√≥n</button>
    </div>
  </div>

  <div class="products-wrapper">
    <div class="user-profile">
      <div class="profile-card">
        <div class="profile-header">
          <div class="profile-avatar">üë§</div>
          <h2 id="profileName">{{user.first_name}} {{user.last_name}}</h2>
        </div>

        <div class="profile-details">
          <div class="detail-row">
            <span class="detail-label">Correo Electr√≥nico:</span>
            <span class="detail-value" id="profileEmail">{{user.email}}</span>
          </div>

          <div class="detail-row">
            <span class="detail-label">Edad:</span>
            <span class="detail-value" id="profileAge">{{user.age}} a√±os</span>
          </div>

          <div class="detail-row">
            <span class="detail-label">Rol:</span>
            <span class="detail-value" id="profileRole"></span>
          </div>

        </div>
      </div>

      <div class="profile-card">
        <div class="profile-header">
          <h2>üßæ Historial de Compras</h2>
        </div>
        <div id="purchaseHistory" class="history-list">
          <p class="loading-text">Cargando historial...</p>
        </div>
      </div>

      <div class="quick-links">
        <a href="/products" class="btn-primary">üõçÔ∏è Ir a Comprar</a>
        <a href="/cart" class="btn-secondary">üõí Ver Carrito</a>
      </div>
    </div>
  </div>
</div>

<script>
  // Helper para formatear fecha
  Handlebars.registerHelper('formatDate', function(date) {
    const d = new Date(date);
    return d.toLocaleDateString('es-ES', { year: 'numeric', month: 'long', day: 'numeric' });
  });

  function getToken() {
    return localStorage.getItem('token');
  }

  function renderRole(role) {
    const roleContainer = document.getElementById('profileRole');
    if (!roleContainer) return;

    if (role === 'admin') {
      roleContainer.innerHTML = '<span class="badge badge-admin">üëë Administrador</span>';
    } else {
      roleContainer.innerHTML = '<span class="badge badge-user">üë§ Usuario</span>';
    }
  }

  function setProfileField(id, value) {
    const el = document.getElementById(id);
    if (el) {
      el.textContent = value || '‚Äî';
    }
  }

  function formatDate(date) {
    if (!date) return '‚Äî';
    const d = new Date(date);
    return d.toLocaleDateString('es-ES', { year: 'numeric', month: 'long', day: 'numeric' });
  }

  async function loadCurrentUser() {
    const token = getToken();
    if (!token) {
      return;
    }

    try {
      const response = await fetch('/api/sessions/current', {
        headers: {
          'Authorization': `Bearer ${token}`
        }
      });

      if (!response.ok) {
        return;
      }

      const data = await response.json();
      const user = data.user;
      if (!user) return;

      setProfileField('profileName', `${user.first_name} ${user.last_name}`.trim());
      setProfileField('profileEmail', user.email);
      setProfileField('profileAge', user.age ? `${user.age} a√±os` : '‚Äî');
      renderRole(user.role);
    } catch (error) {
      console.error('Error cargando usuario actual:', error);
    }
  }

  async function loadPurchaseHistory() {
    const container = document.getElementById('purchaseHistory');
    if (!container) return;

    const token = getToken();
    if (!token) {
      container.innerHTML = '<p>Debes iniciar sesi√≥n para ver el historial.</p>';
      return;
    }

    try {
      const response = await fetch('/api/purchases/my-tickets?limit=10', {
        headers: {
          'Authorization': `Bearer ${token}`
        }
      });

      if (!response.ok) {
        container.innerHTML = '<p>No se pudo cargar el historial.</p>';
        return;
      }

      const data = await response.json();
      const tickets = data.tickets || [];

      if (tickets.length === 0) {
        container.innerHTML = '<p>No hay compras registradas.</p>';
        return;
      }

      container.innerHTML = tickets.map(ticket => {
        const statusLabel = ticket.status === 'completed' ? 'Completada' : ticket.status === 'cancelled' ? 'Cancelada' : 'Pendiente';
        const total = ticket.total?.toFixed ? ticket.total.toFixed(2) : ticket.total;
        const itemsCount = ticket.quantity || ticket.products?.length || 0;
        const products = ticket.products || [];
        const productsHtml = products.length
          ? `<ul class="history-products">
              ${products.map(item => {
                const name = item.name || item.product?.name || 'Producto';
                const qty = item.quantity || 0;
                return `<li>${name} <span class="history-qty">x${qty}</span></li>`;
              }).join('')}
            </ul>`
          : '<p class="history-empty">Sin productos</p>';
        return `
          <div class="history-item">
            <div>
              <div class="history-code">${ticket.code}</div>
              <div class="history-date">${formatDate(ticket.purchase_datetime)}</div>
            </div>
            <div class="history-meta">
              <span class="history-status">${statusLabel}</span>
              <span class="history-items">${itemsCount} items</span>
              <span class="history-total">$${total}</span>
            </div>
            <div class="history-products-wrapper">
              ${productsHtml}
            </div>
          </div>
        `;
      }).join('');
    } catch (error) {
      console.error('Error cargando historial:', error);
      container.innerHTML = '<p>Error al cargar historial.</p>';
    }
  }

  // Cerrar sesi√≥n
  document.getElementById('logoutBtn').addEventListener('click', async () => {
    try {
      const response = await fetch('/api/sessions/logout', {
        method: 'POST'
      });
      
      const data = await response.json();
      
      if (data.status === 'success') {
        window.location.href = data.redirect || '/login';
      }
    } catch (error) {
      console.error('Error al cerrar sesi√≥n:', error);
      window.location.href = '/login';
    }
  });

  loadCurrentUser();
  loadPurchaseHistory();
</script>

