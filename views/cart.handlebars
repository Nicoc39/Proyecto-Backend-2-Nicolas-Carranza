<div class="cart-container">
  <div class="cart-header">
    <div>
      <a href="/products" class="btn-secondary">‚Üê Volver a Productos</a>
    </div>
    <h1>üõí Mi Carrito</h1>
    <div>
      <a href="/current" class="btn-secondary">Mi Perfil</a>
      <button id="logoutBtn" class="btn-secondary">Cerrar Sesi√≥n</button>
    </div>
  </div>

  <div id="cartContent"></div>
</div>

<script>
  // Funci√≥n para obtener el token
  function getToken() {
    return localStorage.getItem('token');
  }

  // Cargar carrito
  async function loadCart() {
    try {
      const response = await fetch('/api/carts/', {
        headers: {
          'Authorization': `Bearer ${getToken()}`
        }
      });

      const data = await response.json();

      if (data.status === 'success') {
        displayCart(data.cart);
      } else {
        document.getElementById('cartContent').innerHTML = 
          '<p class="error-message">Error al cargar carrito</p>';
      }
    } catch (error) {
      console.error('Error cargando carrito:', error);
      document.getElementById('cartContent').innerHTML = 
        '<p class="error-message">Error al cargar carrito</p>';
    }
  }

  function displayCart(cart) {
    const container = document.getElementById('cartContent');

    if (!cart || !cart.products || cart.products.length === 0) {
      container.innerHTML = `
        <div class="empty-cart">
          <p>Tu carrito est√° vac√≠o</p>
          <a href="/products" class="btn-primary">Ver productos</a>
        </div>
      `;
      return;
    }

    let total = 0;
    const productsHTML = cart.products.map(item => {
      const subtotal = item.product.price * item.quantity;
      total += subtotal;

      return `
        <div class="cart-item">
          <div class="cart-item-thumb" style="${item.product.thumbnail ? `--thumb-url: url('${item.product.thumbnail}')` : ''}">
            ${item.product.thumbnail ? `<img src="${item.product.thumbnail}" alt="${item.product.name}">` : 'üì¶'}
          </div>
          <div class="item-info">
            <h3>${item.product.name}</h3>
            <p>Precio unitario: <strong>$${item.product.price.toFixed(2)}</strong></p>
          </div>
          <div class="item-quantity">
            <button onclick="updateQuantity('${item.product._id}', ${item.quantity - 1})">‚àí</button>
            <input 
              type="number" 
              min="1" 
              value="${item.quantity}" 
              data-product-id="${item.product._id}"
              onchange="updateQuantity('${item.product._id}', this.value)"
            >
            <button onclick="updateQuantity('${item.product._id}', ${item.quantity + 1})">+</button>
          </div>
          <div class="item-price">$${subtotal.toFixed(2)}</div>
          <button 
            class="btn-danger" 
            onclick="removeFromCart('${item.product._id}')">
            ‚úï
          </button>
        </div>
      `;
    }).join('');

    container.innerHTML = `
      <div class="cart-content">
        <div class="cart-items">
          ${productsHTML}
        </div>
        <div class="cart-summary">
          <h2>Resumen de Compra</h2>
          <div class="summary-row">
            <span>Subtotal:</span>
            <span>$${total.toFixed(2)}</span>
          </div>
          <div class="summary-row">
            <span>Env√≠o:</span>
            <span>$0.00</span>
          </div>
          <div class="summary-row total">
            <span>Total:</span>
            <span>$${total.toFixed(2)}</span>
          </div>
          <button class="btn-primary" onclick="checkout()">Proceder al Pago</button>
          <button class="btn-secondary" onclick="clearCart()" style="width: 100%; margin-top: 1rem;">Vaciar Carrito</button>
        </div>
      </div>
    `;
  }

  async function updateQuantity(productId, quantity) {
    try {
      const response = await fetch(`/api/carts/update/${productId}`, {
        method: 'PUT',
        headers: {
          'Content-Type': 'application/json',
          'Authorization': `Bearer ${getToken()}`
        },
        body: JSON.stringify({ quantity: parseInt(quantity) })
      });

      const data = await response.json();

      if (data.status === 'success') {
        loadCart(); // Recargar carrito
      } else {
        alert('Error al actualizar cantidad');
      }
    } catch (error) {
      console.error('Error actualizando cantidad:', error);
      alert('Error al actualizar cantidad');
    }
  }

  async function removeFromCart(productId) {
    if (confirm('¬øEliminar producto del carrito?')) {
      try {
        const response = await fetch(`/api/carts/remove/${productId}`, {
          method: 'DELETE',
          headers: {
            'Authorization': `Bearer ${getToken()}`
          }
        });

        const data = await response.json();

        if (data.status === 'success') {
          loadCart(); // Recargar carrito
        } else {
          alert('Error al eliminar producto');
        }
      } catch (error) {
        console.error('Error eliminando producto:', error);
        alert('Error al eliminar producto');
      }
    }
  }

  async function clearCart() {
    try {
      const response = await fetch('/api/carts/clear', {
        method: 'DELETE',
        headers: {
          'Authorization': `Bearer ${getToken()}`
        }
      });

      const data = await response.json();

      if (data.status === 'success') {
        loadCart(); // Recargar carrito
      } else {
        alert('Error al vaciar carrito');
      }
    } catch (error) {
      console.error('Error vaciando carrito:', error);
      alert('Error al vaciar carrito');
    }
  }

  function checkout() {
    // Obtener items del carrito desde el input de cantidades
    const quantityInputs = document.querySelectorAll('input[data-product-id]');
    
    if (quantityInputs.length === 0) {
      alert('El carrito est√° vac√≠o');
      return;
    }

    // Preparar items para la compra
    const items = Array.from(quantityInputs).map(input => {
      const productId = input.getAttribute('data-product-id');
      const quantity = parseInt(input.value) || 1;
      return { product_id: productId, quantity };
    });

    // Procesar compra
    processPurchase(items);
  }

  async function processPurchase(items) {
    try {
      const response = await fetch('/api/purchases/process', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
          'Authorization': `Bearer ${getToken()}`
        },
        body: JSON.stringify({
          items: items
        })
      });

      const data = await response.json();

      if (data.status === 'success') {
        console.log('üí≥ Compra procesada:', data.ticket);
        
        // Mostrar resultado de la compra
        const message = data.ticket.status === 'completed' 
          ? `‚úÖ ¬°Compra exitosa!\\n\\nTicket: ${data.ticket.code}\\nTotal: $${data.ticket.total.toFixed(2)}\\n\\nGracias por tu compra`
          : `‚ö†Ô∏è Compra Parcial\\n\\nTicket: ${data.ticket.code}\\nProductos comprados: ${data.ticket.quantity}\\nTotal: $${data.ticket.total.toFixed(2)}\\n\\nAlgunos productos no tuvieron stock suficiente`;
        
        alert(message);
        
        // Vaciar carrito despu√©s de la compra exitosa
        if (data.ticket.status === 'completed') {
          clearCart();
          setTimeout(() => {
            window.location.href = '/products';
          }, 1000);
        } else {
          loadCart(); // Recargar carrito para actualizar cantidades
        }
      } else {
        alert('Error en la compra: ' + (data.message || 'Error desconocido'));
      }
    } catch (error) {
      console.error('Error procesando compra:', error);
      alert('Error al procesar la compra. Intenta de nuevo.');
    }
  }

  // Cerrar sesi√≥n
  document.getElementById('logoutBtn').addEventListener('click', async () => {
    try {
      const response = await fetch('/api/sessions/logout', {
        method: 'POST'
      });

      const data = await response.json();

      if (data.status === 'success') {
        // Limpiar token
        localStorage.removeItem('token');
        window.location.href = '/login';
      } else {
        // Limpiar token e ir a login de todas formas
        localStorage.removeItem('token');
        window.location.href = '/login';
      }
    } catch (error) {
      console.error('Error al cerrar sesi√≥n:', error);
      // Limpiar token e ir a login de todas formas
      localStorage.removeItem('token');
      window.location.href = '/login';
    }
  });

  // Cargar carrito al iniciar
  loadCart();
</script>
