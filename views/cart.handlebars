<div class="container">
  <div class="header">
    <div class="back-button">
      <a href="/products" class="btn-secondary">← Volver a Productos</a>
    </div>
    <h1>Mi Carrito</h1>
    <button id="logoutBtn" class="btn-secondary">Cerrar Sesión</button>
  </div>

  <div class="cart-section">
    <div id="cartContent"></div>
  </div>
</div>

<script>
  // Función para obtener el token
  function getToken() {
    return localStorage.getItem('token');
  }

  // Cargar carrito
  async function loadCart() {
    try {
      const response = await fetch('/api/cart', {
        headers: {
          'Authorization': `Bearer ${getToken()}`
        }
      });

      const data = await response.json();

      if (data.status === 'success') {
        displayCart(data.cart);
      } else {
        document.getElementById('cartContent').innerHTML = 
          '<p class="error-message">Error al cargar carrito</p>';
      }
    } catch (error) {
      console.error('Error cargando carrito:', error);
      document.getElementById('cartContent').innerHTML = 
        '<p class="error-message">Error al cargar carrito</p>';
    }
  }

  function displayCart(cart) {
    const container = document.getElementById('cartContent');

    if (!cart || !cart.products || cart.products.length === 0) {
      container.innerHTML = `
        <div class="empty-cart">
          <p>Tu carrito está vacío</p>
          <a href="/products" class="btn-primary">Ver productos</a>
        </div>
      `;
      return;
    }

    let total = 0;
    const productsHTML = cart.products.map(item => {
      const subtotal = item.product.price * item.quantity;
      total += subtotal;

      return `
        <div class="cart-item">
          <div class="item-info">
            <h3>${item.product.name}</h3>
            <p class="price">Precio: $${item.product.price}</p>
            <p class="quantity">Cantidad: 
              <input 
                type="number" 
                min="1" 
                value="${item.quantity}" 
                data-product-id="${item.product._id}"
                onchange="updateQuantity('${item.product._id}', this.value)"
                class="quantity-input"
              >
            </p>
            <p class="subtotal">Subtotal: $${subtotal}</p>
          </div>
          <button 
            class="btn-danger" 
            onclick="removeFromCart('${item.product._id}')">
            Eliminar
          </button>
        </div>
      `;
    }).join('');

    container.innerHTML = `
      <div class="cart-items">
        ${productsHTML}
      </div>
      <div class="cart-summary">
        <h2>Total: $${total}</h2>
        <div class="cart-actions">
          <button class="btn-primary" onclick="checkout()">Comprar</button>
          <button class="btn-secondary" onclick="clearCart()">Vaciar carrito</button>
        </div>
      </div>
    `;
  }

  async function updateQuantity(productId, quantity) {
    try {
      const response = await fetch(`/api/cart/update/${productId}`, {
        method: 'PUT',
        headers: {
          'Content-Type': 'application/json',
          'Authorization': `Bearer ${getToken()}`
        },
        body: JSON.stringify({ quantity: parseInt(quantity) })
      });

      const data = await response.json();

      if (data.status === 'success') {
        loadCart(); // Recargar carrito
      } else {
        alert('Error al actualizar cantidad');
      }
    } catch (error) {
      console.error('Error actualizando cantidad:', error);
      alert('Error al actualizar cantidad');
    }
  }

  async function removeFromCart(productId) {
    if (confirm('¿Eliminar producto del carrito?')) {
      try {
        const response = await fetch(`/api/cart/remove/${productId}`, {
          method: 'DELETE',
          headers: {
            'Authorization': `Bearer ${getToken()}`
          }
        });

        const data = await response.json();

        if (data.status === 'success') {
          loadCart(); // Recargar carrito
        } else {
          alert('Error al eliminar producto');
        }
      } catch (error) {
        console.error('Error eliminando producto:', error);
        alert('Error al eliminar producto');
      }
    }
  }

  async function clearCart() {
    if (confirm('¿Vaciar el carrito completamente?')) {
      try {
        const response = await fetch('/api/cart/clear', {
          method: 'DELETE',
          headers: {
            'Authorization': `Bearer ${getToken()}`
          }
        });

        const data = await response.json();

        if (data.status === 'success') {
          loadCart(); // Recargar carrito
        } else {
          alert('Error al vaciar carrito');
        }
      } catch (error) {
        console.error('Error vaciando carrito:', error);
        alert('Error al vaciar carrito');
      }
    }
  }

  function checkout() {
    alert('Funcionalidad de compra en desarrollo');
    // Aquí implementarías la lógica de pago
  }

  // Cerrar sesión
  document.getElementById('logoutBtn').addEventListener('click', async () => {
    try {
      const response = await fetch('/api/users/logout', {
        method: 'POST'
      });

      const data = await response.json();

      if (data.status === 'success') {
        window.location.href = data.redirect || '/login';
      }
    } catch (error) {
      console.error('Error al cerrar sesión:', error);
      window.location.href = '/login';
    }
  });

  // Cargar carrito al iniciar
  loadCart();
</script>

