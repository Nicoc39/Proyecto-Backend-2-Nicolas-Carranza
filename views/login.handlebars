<script>
  console.log('üîê Vista de login cargada');
  
  document.getElementById('loginForm').addEventListener('submit', async (e) => {
    e.preventDefault();
    
    const errorDiv = document.getElementById('errorMessage');
    errorDiv.textContent = '';
    
    const formData = {
      email: document.getElementById('email').value,
      password: document.getElementById('password').value
    };

    console.log('üì§ Enviando login a /api/sessions/login');

    try {
      // ‚úÖ RUTA CORREGIDA: /api/sessions/login
      const response = await fetch('/api/sessions/login', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json'
        },
        body: JSON.stringify(formData)
      });

      console.log('üì• Status:', response.status);

      const data = await response.json();
      console.log('üì¶ Respuesta:', data);

      if (response.ok && data.status === 'success') {
        console.log('‚úì Login exitoso');
        
        // ‚úÖ GUARDAR TOKEN EN LOCALSTORAGE
        if (data.token) {
          console.log('üîë Guardando token...');
          localStorage.setItem('token', data.token);
          console.log('‚úÖ Token guardado:', data.token.substring(0, 30) + '...');
          
          // Verificar que se guard√≥
          const verificacion = localStorage.getItem('token');
          if (verificacion) {
            console.log('‚úÖ Token verificado en localStorage');
          } else {
            console.error('‚ùå ERROR: Token NO se guard√≥');
            errorDiv.textContent = 'Error guardando sesi√≥n';
            return;
          }
        } else {
          console.error('‚ùå ERROR: Servidor no envi√≥ token');
          errorDiv.textContent = 'Error: No se recibi√≥ token';
          return;
        }
        
        // Redirigir
        console.log('üîÑ Redirigiendo a:', data.redirect || '/products');
        setTimeout(() => {
          window.location.href = data.redirect || '/products';
        }, 300);
        
      } else {
        console.error('‚ùå Login fallido:', data.message);
        errorDiv.textContent = data.message || 'Error al iniciar sesi√≥n';
      }
    } catch (error) {
      console.error('‚ùå Error de conexi√≥n:', error);
      errorDiv.textContent = 'Error de conexi√≥n con el servidor';
    }
  });
</script>